<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BrainyStories.PotentialPrizes"
             NavigationPage.HasNavigationBar="false"
             BackgroundColor="#A9FFF7">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical"
               VerticalOptions="FillAndExpand"
               CompressedLayout.IsHeadless="True">
            <!--<Start of Navigation Bar />-->
            <StackLayout VerticalOptions="Start"
              HorizontalOptions="FillAndExpand"
              Orientation="Horizontal"
              BackgroundColor ="#A9FFF7">
                <ImageButton HorizontalOptions="Start"
                Source="BackButton.png"
                Clicked ="BackClicked"
                WidthRequest="50"
                HeightRequest="50"
                Aspect="AspectFill"
                VerticalOptions="CenterAndExpand"
                BorderColor ="Transparent"
                BackgroundColor="Transparent" />
                <ImageButton
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="Start"
                Source="Home.png"
                Aspect="AspectFill"
                WidthRequest="50"
                HeightRequest="50"
                Clicked ="HomeClicked"
                BorderColor ="Transparent"
                BackgroundColor="Transparent" />
            </StackLayout>
            <!--<End of Navigation Bar />-->
            <!--placeholder for content of the prizes page-->
            <ScrollView
                VerticalScrollBarVisibility="Default">
                <Grid HorizontalOptions="FillAndExpand">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <!--Row 1-->
                    <ImageButton
                        Grid.Row="0"
                        Grid.Column="0"
                        Source="Prizes/Cat.png"
                        Clicked="PrizeSelected" />
                    <ImageButton
                        Grid.Row="0"
                        Grid.Column="1"
                        Source="Prizes/Dog.png"
                         Clicked="PrizeSelected" />
                    <ImageButton
                        Grid.Row="0"
                        Grid.Column="2"
                        Source="Prizes/IceCream.png"
                         Clicked="PrizeSelected" />
                    <ImageButton
                        Grid.Row="0"
                        Grid.Column="3"
                        Source="Prizes/Robot.png"
                         Clicked="PrizeSelected" />
                    <ImageButton
                        Grid.Row="0"
                        Grid.Column="4"
                        Source="Prizes/Elephant.png"
                         Clicked="PrizeSelected" />
                    <!--Row 2-->
                    <ImageButton
                        Grid.Row="1"
                        Grid.Column="0"
                        Source="Prizes/Firetruck.png"
                        Clicked="PrizeSelected" />
                    <ImageButton
                        Grid.Row="1"
                        Grid.Column="1"
                        Source="Prizes/Dolphin.png"
                         Clicked="PrizeSelected" />
                    <ImageButton
                        Grid.Row="1"
                        Grid.Column="2"
                        Source="Prizes/Butterfly.png"
                         Clicked="PrizeSelected" />
                    <ImageButton
                        Grid.Row="1"
                        Grid.Column="3"
                        Source="Prizes/Swing.png"
                        Clicked="PrizeSelected" />
                    <ImageButton
                        Grid.Row="1"
                        Grid.Column="4"
                        Source="Prizes/Trike.png"
                         Clicked="PrizeSelected" />
                    <!--Row 3-->
                    <ImageButton
                        Grid.Row="2"
                        Grid.Column="0"
                        Source="Prizes/Gold.png"
                        Clicked="PrizeSelected" />
                    <ImageButton
                        Grid.Row="2"
                        Grid.Column="1"
                        Source="Prizes/Parrot.png"
                         Clicked="PrizeSelected" />
                    <ImageButton
                        Grid.Row="2"
                        Grid.Column="2"
                        Source="Prizes/Dino.png"
                         Clicked="PrizeSelected" />
                    <ImageButton
                        Grid.Row="2"
                        Grid.Column="3"
                        Source="Prizes/Skateboard.png"
                        Clicked="PrizeSelected" />
                    <ImageButton
                        Grid.Row="2"
                        Grid.Column="4"
                        Source="Prizes/Tiger.png"
                         Clicked="PrizeSelected" />
                    <!--Row 4-->
                    <ImageButton
                        Grid.Row="3"
                        Grid.Column="0"
                        Source="Prizes/Dollhouse.png"
                        Clicked="PrizeSelected" />
                    <ImageButton
                        Grid.Row="3"
                        Grid.Column="1"
                        Source="Prizes/Cookies.png"
                         Clicked="PrizeSelected" />
                    <ImageButton
                        Grid.Row="3"
                        Grid.Column="2"
                        Source="Prizes/Tiara.png"
                         Clicked="PrizeSelected" />
                    <ImageButton
                        Grid.Row="3"
                        Grid.Column="3"
                        Source="Prizes/Tent.png"
                        Clicked="PrizeSelected" />
                    <ImageButton
                        Grid.Row="3"
                        Grid.Column="4"
                        Source="Prizes/Canoe.png"
                         Clicked="PrizeSelected" />
                    <!--Row 5-->
                    <ImageButton
                        Grid.Row="4"
                        Grid.Column="0"
                        Source="Prizes/Unicorn.png"
                        Clicked="PrizeSelected" />
                    <ImageButton
                        Grid.Row="4"
                        Grid.Column="1"
                        Source="Prizes/Bigfoot.png"
                         Clicked="PrizeSelected" />
                    <ImageButton
                        Grid.Row="4"
                        Grid.Column="2"
                        Source="Prizes/Dragon.png"
                         Clicked="PrizeSelected" />
                    <ImageButton
                        Grid.Row="4"
                        Grid.Column="3"
                        Source="Prizes/Bulldozer.png"
                        Clicked="PrizeSelected" />
                    <ImageButton
                        Grid.Row="4"
                        Grid.Column="4"
                        Source="Prizes/Mermaid.png"
                         Clicked="PrizeSelected" />
                </Grid>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>