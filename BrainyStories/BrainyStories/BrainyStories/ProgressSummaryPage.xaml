<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BrainyStories.ProgressSummaryPage"
             xmlns:local="clr-namespace:BrainyStories.Objects"
             Title="Summary">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="completedNum" TargetType="Label">
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="FontSize" Value="50" />
                <Setter Property="TextColor" Value="#23C874" />
            </Style>
            <Style x:Key="completedLabel" TargetType="Label">
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="FontSize" Value="20" />
            </Style>
            <Style TargetType="Label">
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="FontSize" Value="30" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout x:Name="introLayout" VerticalOptions="FillAndExpand">
            <Label Text="{Binding Source={x:Static local:User.Name}, StringFormat='\{0} has completed'}" />
            <Grid VerticalOptions="FillAndExpand">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label Text="{Binding Source={x:Static local:User.StoryCount}}" Grid.Row="0" Grid.Column="0" Style="{StaticResource completedNum}" />
                <Label Text="{Binding Source={x:Static local:User.QuizCount}}" Grid.Row="0" Grid.Column="1" Style="{StaticResource completedNum}" />
                <Label Text="{Binding Source={x:Static local:User.ThinkAndDoCount}}" Grid.Row="0" Grid.Column="2" Style="{StaticResource completedNum}" />
                <Label Text="Stories" Grid.Row="1" Grid.Column="0" Style="{StaticResource completedLabel}" />
                <Label Text="Quizzes" Grid.Row="1" Grid.Column="1" Style="{StaticResource completedLabel}" />
                <Label Text="Think &amp; Do's" Grid.Row="1" Grid.Column="2" Style="{StaticResource completedLabel}" />
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>