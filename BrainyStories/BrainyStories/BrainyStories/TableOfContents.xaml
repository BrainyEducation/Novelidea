<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:BrainyStories"
             x:Class="BrainyStories.TableOfContents"
             x:Name="MyPage"
             NavigationPage.HasNavigationBar="false">
    <StackLayout Orientation="Vertical"
                 VerticalOptions="FillAndExpand"
                 CompressedLayout.IsHeadless="True">
        <StackLayout VerticalOptions="Start"
                  HorizontalOptions="FillAndExpand"
                  Orientation="Horizontal"
                  BackgroundColor ="Blue">
          <ImageButton HorizontalOptions="Start"
                       Source="Animal.png"
                       Clicked ="BackClicked"/>
          <ImageButton HorizontalOptions="Start"
                       Source="Female.png"
                       Clicked ="HomeClicked"/>
          <ImageButton HorizontalOptions="LayoutOptions.EndAndExpand"
                       Source="Male.png"
                       Clicked ="SettingsClicked"/>
        </StackLayout>
        <StackLayout x:Name="appealKeyStackLayout"
                     Orientation ="Horizontal"
                     HorizontalOptions="StartAndExpand"
                     Margin="10,0,10,5">
            <Image Source="General.png"
                   HorizontalOptions="StartAndExpand"/>
            <Label Text= "General"/>
            <Image Source="Animal.png"
                   HorizontalOptions="StartAndExpand"/>
            <Label Text= "Animal"/>
            <Image Source="Female.png"
                   HorizontalOptions="StartAndExpand"/>
            <Label Text= "Female"/>
            <Image Source="Male.png"
                   HorizontalOptions="StartAndExpand"/>
            <Label Text= "Male"/>
        </StackLayout>
        <ListView x:Name="listView"
                  ItemsSource="{x:Static local:Story.ListOfStories}"
                  HasUnevenRows="True"
                  Margin="10,0,10,20"
                  ItemTapped="OnItemTapped">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <ViewCell.View>
                            <StackLayout Orientation="Horizontal"
                                         Padding="0,0,0,10">
                                <Image Source="{Binding Icon, Mode=OneWay}"
                                       HeightRequest="150"
                                       VerticalOptions ="Start"/>
                                <StackLayout Orientation="Vertical"
                                             x:Name="verticalStackLayout">
                                    <Label Text="{Binding Name, Mode=OneWay}"
                                       FontAttributes="Bold"/>
                                    <Label Text="{Binding Description, Mode=OneWay}"/>
                                    <StackLayout Orientation="Horizontal">
                                        <Label Text="{Binding Duration, Mode=OneWay, StringFormat='{}{0:mm}:{0:ss}'}"/>
                                        <Label Text="{Binding WordCount, Mode=OneWay, StringFormat='{0} words'}"
                                               HorizontalTextAlignment="End"/>
                                    </StackLayout>
                                    <ListView ItemsSource="{Binding ListOfIcons}"
                                              Rotation="270"
                                              SeparatorVisibility="None"
                                              RowHeight="20"
                                              VerticalOptions ="Start"
                                              SelectionMode="None">
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <ViewCell>
                                                    <ViewCell.View>
                                                        <StackLayout>
                                                            <Image Source ="{Binding .}"
                                                                   Rotation="90"/>
                                                        </StackLayout>
                                                    </ViewCell.View>
                                                </ViewCell>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </StackLayout>
                            </StackLayout>
                        </ViewCell.View>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
    </StackLayout>
</ContentPage>