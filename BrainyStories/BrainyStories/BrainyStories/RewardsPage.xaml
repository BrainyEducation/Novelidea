                         Grid.Column="0"
                         Orientation="Horizontal"/>
            <StackLayout x:Name="SilverList"
                         Grid.Row="1"
                         Grid.Column="0"
                         Orientation="Horizontal"/>
            <StackLayout x:Name="BronzeList"
                         Grid.Row="2"
