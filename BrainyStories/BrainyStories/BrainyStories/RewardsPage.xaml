                        Grid.Column="4"
                        Grid.Row="4" />
                    <Label x:Name="ScoreCoinLabel"
                        VerticalOptions="Center"
                        HorizontalOptions="CenterAndExpand"
                        FontSize="Large"
                        FontAttributes="Bold"
                        Grid.Column="4"
                        Grid.Row="4" />
