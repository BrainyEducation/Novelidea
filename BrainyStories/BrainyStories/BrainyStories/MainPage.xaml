<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BrainyStories.MainPage">

    <Grid x:Name="pageGrid" BackgroundColor="Aqua" Padding="0,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Text="Brainy Stories"
               FontFamily="{StaticResource Curly}"
               FontSize="48"
               VerticalOptions="Center"
               HorizontalOptions="Center"
               Grid.Row="0"
               Grid.Column="0"
               Grid.ColumnSpan="3"
               Margin="5,0,0,0"/>
        <!--<Image Source="giraffe.jpg"
               VerticalOptions="CenterAndExpand"
               Grid.Row="1"
               Grid.Column="0"
               Grid.ColumnSpan="3"/>-->
        <Button Text="Imagines"
                TextColor="White"
                BackgroundColor="Purple"
                VerticalOptions="Center"
                Clicked="StoriesClicked"
                Grid.Row="1"
                Grid.Column="0"
                Grid.ColumnSpan="1"/>
        <Button Text="Classic Stories"
                TextColor="White"
                BackgroundColor="Purple"
                VerticalOptions="Center"
                Clicked="StoriesClicked"
                Grid.Row="1"
                Grid.Column="1"
                Grid.ColumnSpan="1"/>
        <Button Text="Rewards"
                TextColor="White"
                BackgroundColor="Purple"
                VerticalOptions="Center"
                Grid.Row="2"
                Grid.Column="0"
                Grid.ColumnSpan="1"/>
        <Button Text="Progress"
                TextColor="White"
                BackgroundColor="Purple"
                VerticalOptions="Center"
                Grid.Row="2"
                Grid.Column="2"
                Grid.ColumnSpan="1"/>
        <Button Text="Quizzes"
                TextColor="White"
                BackgroundColor="Purple"
                VerticalOptions="Center"
                Grid.Row="2"
                Grid.Column="1"
                Grid.ColumnSpan="1"/>
        <Button Text="Think and Do"
                TextColor="White"
                BackgroundColor="Purple"
                VerticalOptions="Center"
                Clicked="StoriesClicked"
                Grid.Row="1"
                Grid.Column="2"
                Grid.ColumnSpan="1"/>
    </Grid>

</ContentPage>
