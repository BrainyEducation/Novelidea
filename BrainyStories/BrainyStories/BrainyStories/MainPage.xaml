<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BrainyStories.MainPage"
             NavigationPage.HasNavigationBar="false">
    <StackLayout Orientation="Vertical"
               Spacing="5"
               VerticalOptions="FillAndExpand"
               BackgroundColor="#A9FFF7">
        <!--<Start of Navigation Bar />-->
        <StackLayout VerticalOptions="Start"
                 HorizontalOptions="FillAndExpand"
                 Orientation="Horizontal"
                 BackgroundColor ="#A9FFF7">
            <ImageButton HorizontalOptions="Start"
                   Source="BackButton.png"
                   Clicked ="BackClicked"
                   BorderColor ="Transparent"
                   BackgroundColor="Transparent"
                   IsVisible="False" />
            <ImageButton HorizontalOptions="Start"
                   Source="Home.png"
                   Clicked ="HomeClicked"
                   BorderColor ="Transparent"
                   BackgroundColor="Transparent"
                   IsVisible="False" />

            <!--<End of Navigation Bar />-->
            <Grid x:Name="pageGrid" BackgroundColor="#A9FFF7" Padding="5,5,5,5">
                <Grid.RowDefinitions>
                    <RowDefinition  Height="*" />
                    <RowDefinition  Height="*" />
                    <RowDefinition  Height="*" />
                    <RowDefinition  Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <!--<Brainy Stories Logo />-->
                <Image Source="logo.png"
         VerticalOptions="Center"
         HorizontalOptions="Center"
         Grid.Row="0"
         Grid.Column="1"
         Grid.RowSpan="1"
         Grid.ColumnSpan="8" />
                <!--<Six home page buttons />-->
                <ImageButton
              BackgroundColor="White"
              Clicked="ImaginesClicked"
              Grid.Row="1"
              Grid.RowSpan="2"
              Grid.Column="1"
              Grid.ColumnSpan="4"
              Source="ImaginesButton.png" />
                <ImageButton
              BackgroundColor="White"
              Clicked="StoriesClicked"
              Grid.Row="1"
              Grid.Column="5"
              Grid.RowSpan="2"
              Grid.ColumnSpan="4"
              Source="ClassicStoriesButton.png" />
                <Button Text="Rewards"
              FontFamily="{StaticResource Comic}"
              FontSize="12"
              TextColor="White"
              BackgroundColor="#f85a3e"
              Grid.Row="3"
              Grid.Column="1"
              Clicked="RewardsClicked"
              Grid.ColumnSpan="2"
              ContentLayout="Left" />
                <Button Text="Progress"
              FontFamily="{StaticResource Comic}"
              FontSize="12"
              VerticalOptions="FillAndExpand"
              TextColor="White"
              BackgroundColor="#fc6dab"
              Clicked="ProgressClicked"
              Grid.Row="3"
              Grid.Column="3"
              Grid.ColumnSpan="2"
              ContentLayout="Left" />
                <Button Text="Quizzes"
              FontFamily="{StaticResource Comic}"
              FontSize="12"
              TextColor="White"
              BackgroundColor="#6526DA"
              Clicked="QuizzesClicked"
              Grid.Row="3"
              Grid.Column="5"
              Grid.ColumnSpan="2"
              ContentLayout="Left" />
                <Button Text="Think and Do"
              FontFamily="{StaticResource Comic}"
              FontSize="12"
              TextColor="White"
              BackgroundColor="#226f54"
              Clicked="ThinkAndDoClicked"
              Grid.Row="3"
              Grid.Column="7"
              Grid.ColumnSpan="2"
              ContentLayout="Left" />
            </Grid>
        </StackLayout>
</ContentPage>