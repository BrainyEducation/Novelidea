<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BrainyStories.MainPage"
             NavigationPage.HasNavigationBar="false">
    <Grid x:Name="pageGrid" BackgroundColor="#A9FFF7" Padding="5,5,5,5">
        <Grid.RowDefinitions>
            <RowDefinition  Height="*" />
            <RowDefinition  Height="*" />
            <RowDefinition  Height="3*" />
            <RowDefinition  Height="2*" />
            <RowDefinition  Height="2*" />
            <RowDefinition  Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <!--<Start of Navigation Bar />-->
        <StackLayout VerticalOptions="Start"
                 HorizontalOptions="FillAndExpand"
                 Orientation="Horizontal"
                 BackgroundColor ="#A9FFF7">
            <ImageButton HorizontalOptions="Start"
                   Source="BackButton.png"
                   Clicked ="BackClicked"
                   BorderColor ="Transparent"
                   BackgroundColor="Transparent"
                   IsVisible="False" />
            <ImageButton HorizontalOptions="Start"
                   Source="Home.png"
                   Clicked ="HomeClicked"
                   BorderColor ="Transparent"
                   BackgroundColor="Transparent"
                   IsVisible="False" />
        </StackLayout>

        <!--<End of Navigation Bar />-->

        <!--<Brainy Stories Logo />-->

        <Image Source="logo.png"

         VerticalOptions="CenterAndExpand"
         HorizontalOptions="CenterAndExpand"
         Grid.Row="0"
         Grid.Column="1"
         Grid.RowSpan="2"
         Grid.ColumnSpan="8" />
        <!--<Six home page buttons />-->
        <ImageButton
              BackgroundColor="White"
              Clicked="ImaginesClicked"
              Grid.Row="2"
              Grid.RowSpan="2"
              Grid.Column="1"
              Grid.ColumnSpan="4"
              CornerRadius="50"
              Source="ImaginesButton.png" />
        <ImageButton
              BackgroundColor="White"
              Clicked="StoriesClicked"
              Grid.Row="2"
              Grid.Column="5"
              Grid.RowSpan="2"
              Grid.ColumnSpan="4"
              CornerRadius="50"
              Source="ClassicStoriesButton.png" />
        <Button Text="Rewards"
              FontFamily="{StaticResource Comic}"
              TextColor="White"
              FontAttributes="Bold"
              BackgroundColor="#f85a3e"
              Grid.Row="4"
              Grid.RowSpan="2"
              Grid.Column="1"
              CornerRadius="50"
              Clicked="RewardsClicked"
              Grid.ColumnSpan="2"
              FontSize="Large" />
        <Button Text="Progress"
              FontFamily="{StaticResource Comic}"
              FontSize="Large"
              FontAttributes="Bold"
              CornerRadius="50"
              VerticalOptions="FillAndExpand"
              TextColor="White"
              BackgroundColor="#fc6dab"
              Clicked="ProgressClicked"
              Grid.Row="4"
              Grid.Column="3"
              Grid.ColumnSpan="2"
              Grid.RowSpan="2" />
        <Button Text="Quizzes"
              FontFamily="{StaticResource Comic}"
              FontSize="Large"
              FontAttributes="Bold"
              TextColor="White"
              BackgroundColor="#6526DA"
              Clicked="QuizzesClicked"
              CornerRadius="50"
              Grid.Row="4"
              Grid.Column="5"
              Grid.RowSpan="2"
              Grid.ColumnSpan="2" />
        <Button Text="Think &#x0a; and &#x0a; Do"
              FontFamily="{StaticResource Comic}"
              FontSize="Large"
              FontAttributes="Bold"
              TextColor="White"
              BackgroundColor="#226f54"
              Clicked="ThinkAndDoClicked"
              CornerRadius="50"
              Grid.Row="4"
              Grid.Column="7"
              Grid.ColumnSpan="2"

              Grid.RowSpan="2" />
    </Grid>
</ContentPage>